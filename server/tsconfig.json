{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"rootDir": "src",
		"baseUrl": ".",
		"outDir": "dist",
		"paths": {
			"@/*": ["src/*"]
		},
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*", "src/tests"],
	"exclude": ["node_modules", "dist"]
}
